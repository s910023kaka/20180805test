@model _20180805.Pages.Servers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Server</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Server.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Server.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Server.Location)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Server.Location)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Server.Owner)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Server.Owner)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Server.AppProfiles)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>id</th>
                    <th>name</th>
                    <th>owner</th>
                </tr>
                @foreach (var item in Model.Server.AppProfiles)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppProfileID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner)
                    </td>
                </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Server.ServerID">Edit</a> |
